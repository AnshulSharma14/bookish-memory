@model IEnumerable<ProjectBookSolution_.Model.Product>
<div class="container">
    <div class="row pb-3 p-2">
        <h2 class="text-center">Adventure Collection</h2>
        @foreach (var product in Model)
        {
            @if (product.Category.Name == "Adventure")
            {
                <div class="col-lg-3 col-md-4 col-6 prdcontainer">

                    <a asp-action="Details" class="special-card" asp-route-productId="@product.Id">

                        <div class="row">
                            <div class="col-12 cd">
                                <div class="card prdcard">
                                    <img src="@product.ImageUrl" class="card-img-top rounded" />

                                    <div class="card-body">
                                        <div class=" cr1">
                                            <p class="card-title h5 text-dark recent-cardname" style="">@product.Title</p>
                                            <p class="card-title text-info recent-card-brandname" style="">by <b>@product.Author</b></p>
                                        </div>
                                        <div class="cr2 text-dark">
                                            <p>List Price: <strike><b>Rs @product.ListPrice.ToString("0.00")</b></strike></p>
                                        </div>
                                        <div class="cr3 text-dark">
                                            <p>As low as: <b>Rs @product.Price.ToString("0.00")</b></p>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>
