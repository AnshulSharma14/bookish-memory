@model ProjectBookSolution_.Model.CoverType
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Cover Type" : "New Cover Type";
    var saveupd = Model.Id != 0 ? "Update" : "save";
}
<div class="container">
<form method="post">
    <div class="row">
        <div class="col-12 border-bottom">
            <h2 class="text-primay">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Name"> </label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToList" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
            </div>
            </div>
</form>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

